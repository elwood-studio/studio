{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "references": [
    {
      "path": "../types",
      "prepend": false
    },
    {
      "path": "../../types",
      "prepend": false
    }
  ]
}
