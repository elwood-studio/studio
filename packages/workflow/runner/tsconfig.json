{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "examples"],
  "references": [
    {
      "path": "../../types",
      "prepend": false
    },
    {
      "path": "../types",
      "prepend": false
    },
    {
      "path": "../config",
      "prepend": false
    },
    {
      "path": "../secrets",
      "prepend": false
    }
  ]
}
