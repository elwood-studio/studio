{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "ignore": ["bin/*.ts", "dist/"],
  "references": []
}
