{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [
    {
      "path": "../types",
      "prepend": false
    }
  ]
}
