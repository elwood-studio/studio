{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "bin/cli-dev.ts"],
  "ignore": ["bin/*.ts", "dist/"],
  "references": [],
  "ts-node": {
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node"
  }
}
